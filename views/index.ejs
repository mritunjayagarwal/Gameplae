                                                                    <div class="col-sm-9 mt-2"><p class = "h3 text-center"><%= successful %></p></div>
                                                    
                                                                  </div>
                                                                <div class="row mt-auto pt-auto text-center">
                                                                    <div class="col mt-auto pt-auto">
                                                                        <p class="brand">&copy; Gameplae gaming</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
