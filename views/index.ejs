                                                      <li class="glide__slide">
                                                          <div class="card" style="max-width: 540px;background:#252525">
                                                              <div class="row no-gutters">
                                                                <div class="col-md-4">
                                                                  <img src="/img/<%= game.face %>" class="card-img" id = "face" style = "width:100%;height:auto;">
                                                                </div>
