                                  <div class = "py-3 my-3" >
                                    <h3 class = "h3" id = "gameHead"><%= game.name %></h3>
                                    <div class = "row">
                                      <div class="glide">
                                          <div class="glide__track" data-glide-el="track">
                                            <ul class="glide__slides">
