<% if(!user){ %>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style = "background: #151515">
          <div class="modal-header py-1 mt-1" style = "border: 0;">
            <p class = "mt-3 py-1" style = "color: #d3d3d3;margin-left:36%;font-size: 25px;font-weight: bolder;"><i class = "fa fa-user"></i> Login</p><button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          </div>
          <div class="modal-body py-0" style = "border: 0;margin-top:-5px;">
            <form action="/login" method = "POST">
                <div class="input-group mt-2">
                  <input type="text" name = "email" id = "username" class="form-control" placeholder="Email" required>
                </div>
                <div class="input-group mt-2">
                  <input type="password" name = "password" id = "username" class="form-control" placeholder="Password" required>
                </div>
                <div class="input-group mt-2 mb-2">
                      <button type = "submit" class = "btn btn-primary btn-block" id = "modalButton">Login</button>
                </div>
                <div class = "row mt-1 mb-3">
                  <div class = "col">
                    <span class = "btn btn-block btn-info" data-toggle="modal" data-target="#SignupModal" data-dismiss = "modal">Create an account</span>
                  </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="SignupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style = "background: #151515">
          <div class="modal-header py-1 mt-1" style = "border: 0;">
            <p class = "mt-3 py-1" style = "color: #d3d3d3;margin-left:36%;font-size: 25px;font-weight: bolder;"><i class = "fa fa-user"></i> Signup</p><button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          </div>
          <div class="modal-body py-0" style = "border: 0;margin-top:-5px;">
            <form action="/create" method = "POST">
                <div class="input-group mt-3">
                  <input type="text" name = "name" id = "username" class="form-control" placeholder="Full Name" required>
                </div>
                <div class="input-group mt-2">
                  <input type="text" name = "email" id = "username" class="form-control" placeholder="Email" required>
                </div>
                <div class="input-group mt-2">
                  <input type="password" name = "password" id = "username" class="form-control" placeholder="Password" required>
                </div>
                <div class="input-group mt-2">
                  <input type="tel" name = "tel" id = "username" class="form-control" placeholder="Phone Number" required>
                </div>
                <div class="input-group mt-2 mb-2">
                      <button type = "submit" class = "btn btn-primary btn-block" id = "modalButton">Create Account</button>
                </div>
                <div class = "row mt-1 mb-3">
                  <div class = "col">
                    <span class = "btn btn-block btn-info" data-toggle="modal" data-target="#myModal" data-dismiss = "modal">Login to existing account</span>
                  </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
